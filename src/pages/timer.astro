  // Help popover functions
  function openHelpPopover() {
    helpPopover.hidden = false;
    // Move focus to close button for better accessibility
    helpClose.focus();
  }

  function closeHelpPopover() {
    helpPopover.hidden = true;
    // Return focus to help button
    helpButton.focus();
  }

  helpButton.addEventListener("click", (e) => {
    e.stopPropagation();
    openHelpPopover();
  });

  helpClose.addEventListener("click", () => {
    closeHelpPopover();
  });

  // Close help popover when clicking outside
  document.addEventListener("click", (e) => {
    const target = e.target as Element;
    if (!helpPopover.contains(target) && !helpButton.contains(target) && !helpPopover.hidden) {
      closeHelpPopover();
    }
  });

  // Handle Escape key for help popover
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !helpPopover.hidden) {
      closeHelpPopover();
    }
  });

  // Parse URL query parameters and initialize timer
  function initializeFromURL() {
    const urlParams = new URLSearchParams(window.location.search);
    
    // Get variant parameter (default: fixed)
    const variant = urlParams.get('variant');
    if (variant === 'target') {
      currentVariant = 'target';
      updateVariantUI();
    }
    
    // Get time parameter
    const time = urlParams.get('time');
    if (time) {
      if (currentVariant === 'target') {
        // For target variant, expect HH:MM format
        // Validate time format (HH:MM)
        if (/^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$/.test(time)) {
          targetTimeInput.value = time;
        }
      } else {
        // For fixed variant, expect minutes
        const minutes = parseInt(time, 10);
        if (!isNaN(minutes) && minutes > 0) {
          const seconds = minutes * 60;
          timeSelect.value = seconds.toString();
          timeTrigger.textContent = `${minutes} min`;
          
          // Update custom option if it's not a standard value
          const standardValues = ['300', '600', '900', '1200'];
          if (!standardValues.includes(seconds.toString())) {
            const customItem = timeMenu.querySelector('[data-value="custom"]') as HTMLButtonElement;
            if (customItem) {
              customItem.dataset.value = seconds.toString();
              customItem.textContent = `${minutes} min`;
            }
          }
        }
      }
    }
    
    // Get type parameter (default: break)
    const type = urlParams.get('type');
    if (type) {
      if (type === 'custom') {
        // Get custom emoji and title
        const emoji = urlParams.get('emoji') || 'âœï¸';
        const title = (urlParams.get('title') || 'Custom').trim();
        
        customEmoji = emoji;
        customTitle = title;
        customEmojiSelect.value = emoji;
        emojiTrigger.textContent = emoji;
        customTitleInput.value = title;
        
        typeSelect.value = 'custom';
        typeTrigger.textContent = `${emoji} ${title}`;
        
        const customItem = typeMenu.querySelector('[data-value="custom"]') as HTMLButtonElement;
        if (customItem) {
          customItem.textContent = `${emoji} ${title}`;
        }
      } else if (['break', 'lab', 'session'].includes(type)) {
        typeSelect.value = type;
        const typeLabels: Record<string, string> = {
          break: 'â˜•ï¸ Break',
          lab: 'ğŸ§‘â€ğŸ”¬ Lab',
          session: 'ğŸ“ Session'
        };
        typeTrigger.textContent = typeLabels[type];
        previousType = type;
      }
    }
    
    // Get autostart parameter
    const autostart = urlParams.get('autostart');
    if (autostart === 'true') {
      // Start timer after a short delay to ensure DOM is fully initialized
      // and all event listeners are attached
      setTimeout(() => {
        startTimer();
      }, 100);
    }
  }

  // Initialize from URL on page load
  initializeFromURL();
</script>